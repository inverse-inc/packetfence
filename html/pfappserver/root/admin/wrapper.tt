<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Administrator - PacketFence</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="PacketFence Administrator">
    <meta name="author" content="Inverse">

    <!-- Le styles -->
    <link rel="stylesheet" href="[% c.uri_for('/static/css/bootstrap.css') %]">
    <link rel="stylesheet" href="[% c.uri_for('/static/app/application.css') %]">
    <link rel="stylesheet" href="[% c.uri_for('/static/css/bootstrap-responsive.css') %]">
    [% FOREACH css = cssFiles %]<link rel="stylesheet" href="[% c.uri_for("/static/${css}.css") %]">[% END %]
    <link rel="stylesheet" href="[% c.uri_for('/static/admin/common.css') %]">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="[% c.uri_for('/static/app/html5.js') %]"></script>
    <![endif]-->
  </head>

  <body>

    <div class="alert alert-success hide">
      <button class="close" data-dismiss="alert">×</button>
      <strong>[% l('Success!') %]</strong> <span></span>
    </div>

    <div class="alert alert-error hide">
      <button class="close" data-dismiss="alert">×</button>
      <strong>[% l('Error!') %]</strong> <span></span>
    </div>

    <div id="navbar" class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#"><img src="[% c.uri_for('/static/app/packetfence.white.png') %]"/></a>
          [% IF c.user_exists -%]
          <div class="nav-collapse">
            <ul class="nav">
              <li[% IF c.action.name == 'status' %] class="active"[% END %]><a href="[% c.uri_for('status') %]">[% l('Status') %]</a></li>
              <li[% IF c.action.name == 'reports' %] class="active"[% END %]><a href="[% c.uri_for('reports') %]">[% l('Reports') %]</a></li>
              <li[% IF c.action.name == 'nodes' %] class="active"[% END %]><a href="[% c.uri_for('nodes') %]">[% l('Nodes') %]</a></li>
              <li[% IF c.action.name == 'users' %] class="active"[% END %]><a href="[% c.uri_for('users') %]">[% l('Users') %]</a></li>
              <li[% IF c.action.name == 'configuration' %] class="active"[% END %]><a href="[% c.uri_for('configuration') %]">[% l('Configuration') %]</a></li>
            </ul>
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> [% c.user %]<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="[% c.uri_for('logout') %]"><i class="icon-off"></i> [% l('Log out') %]</a></li>
                </ul>
              </li>
              <li>
                <a href="#help"><i class="icon-question-sign icon-white"></i> [% l('Help') %]</a>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
          [%- END %]
        </div>
      </div>
    </div>
[% content %]

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="[% c.uri_for('/static/app/jquery.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/app/jquery.json-2.3.min.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/bootstrap.js') %]"></script>
    [% FOREACH js = jsFiles %]<script type="text/javascript" src="[% c.uri_for("/static/${js}.js") %]" charset="UTF-8"></script>
    [% END %]
    <script type="text/javascript" src="[% c.uri_for('/static/app/application.js') %]"></script>
    <script type="text/javascript" src="[% c.uri_for('/static/admin/common.js') %]"></script>

  </body>
</html>
