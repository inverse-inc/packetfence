; Isolation network DNS configuration
; This file is manipulated on PacketFence's startup before being given to named
$TTL 3600
. IN SOA %%hostname%%. %%incharge%% (
    2009020901  ; serial
    10800       ; refresh
    3600        ; retry
    604800      ; expire
    86400       ; default_ttl
)

       IN      NS      %%hostname%%.
*.     IN      A       %%A_blackhole%%
       IN      MX      5       %%hostname%%.

%%PTR_blackhole%%     IN      PTR       %%hostname%%

