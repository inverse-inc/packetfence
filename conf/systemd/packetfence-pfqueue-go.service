[Unit]
Description=PacketFence pfqueue go Service
Wants=packetfence-redis_queue.service packetfence-pfqueue-backend.service packetfence-base.target packetfence-config.service
After=packetfence-redis_queue.service packetfence-pfqueue-backend.service packetfence-base.target packetfence-config.service
Requires=packetfence-pfqueue-backend.service
PartOf=packetfence-pfqueue-backend.service

[Service]
Type=notify
TimeoutStopSec=60
NotifyAccess=all
StartLimitBurst=3
StartLimitInterval=10
ExecStartPre=/bin/perl -I/usr/local/pf/lib -I/usr/local/pf/lib_perl/lib/perl5 '-Mpf::services::manager::pfqueue_go' -e 'pf::services::manager::pfqueue_go->new()->generateConfig()'
ExecStart=/usr/local/pf/sbin/pfqueue-go
TimeoutStopSec=30
Restart=on-failure
Slice=packetfence.slice

[Install]
WantedBy=packetfence.target
